<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>New Cocktail</h1>
      <p>You're about to create a new cocktail <strong><%= @cocktail.name %></strong></p>

      <%= simple_form_for [@cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
